<% layout('/layouts/boilerplate') %>

<!-- <link rel="stylesheet" href="/stylesheets/home.css"> -->

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <main class="px-3">
        <div class="row">
            <div class="col-md-6">
                <h1>MagicPost</h1>
                <p class="lead"> Welcome to MagicPost!</p>
                <a href="/warehouses" class="btn btn-lg btn-secondary font-weight-bold border-white bg-white">View
                    Warehouses</a>
            </div>
    
            <div class="col-md-6">
                <form action="/" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label" for="packageID"><h3>Track Your Package</h3></label>
                        <input class="form-control" type="text" id="packageID" placeholder="Package ID" required>
                    </div>
                    <div class="mb-3">
                        <button class="btn btn-success">Track</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>