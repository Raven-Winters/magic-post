<% layout('/layouts/boilerplate') %>

<div class="container d-flex align-items-center mt-1 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-8">
            <div class="card shadow">
                <img src="https://viettelpost.com.vn/wp-content/uploads/2023/12/5-sao_ava-web.png"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">Edit Store</h5>
                    <form action="/stores/<%= store._id %>?_method=put" class="validated-form" method="post" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="district">District</label>
                            <input class="form-control" type="text" id="district" name="store[district]" value="<%= store.district %>"
                                required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="address">Address</label>
                            <input class="form-control" type="text" id="address" name="store[address]" value="<%= store.address %>"
                                required>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Update</button>
                            <a class="btn btn-danger" href="/stores/<%= store._id %>">Cancel</a>            
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
