<% layout('layouts/boilerplate') %>

<div class="container d-flex align-items-center mt-1 mb-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-sm-8">
            <div class="card shadow">
                <img src="https://viettelpost.com.vn/wp-content/uploads/2023/12/5-sao_ava-web.png"
                    alt="" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">New Warehouse</h5>
                    <form action="/warehouses" method="post" class="validated-form row justify-content-center" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="province">Province</label>
                            <input class="form-control" type="text" id="province" name="warehouse[province]"
                                placeholder="Province" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <button class="btn btn-success">Add</button>
                            <a class="btn btn-primary" href="/warehouses">All Warehouses</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>