<% layout('/layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Warehouse</h1>
        <div class="col-6 offset-3">
            <form action="/warehouses" method="post" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="province">Province</label>
                    <input class="form-control" type="text" id="province" name="warehouse[province]"
                        placeholder="Province" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add</button>
                </div>
            </form>
            <a class="btn btn-primary" href="/warehouses">All Warehouses</a>
        </div>
    </div>