<% layout('/layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Edit Warehouse</h1>
        <div class="col-6 offset-3">
            <form action="/warehouses/<%= warehouse._id %>?_method=put" class="validated-form" method="post" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="province">Province</label>
                    <input class="form-control" type="text" id="province" name="warehouse[province]"
                        value="<%= warehouse.province %>" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Update</button>
                </div>
            </form>
            <a class="btn btn-danger" href="/warehouses/<%= warehouse._id %>">Cancel</a>
        </div>
    </div>